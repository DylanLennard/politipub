<% if current_admin.superadmin? %>
<div class="wrapper_skinny">
  <%= bootstrap_form_for(@admin) do |f| %>

   <div class="field">
    <%= f.email_field :email, label: "Email", autofocus: true, required: true %>
  </div>

  <div class="field">
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, label: "Password", autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.password_field :password_confirmation, label: "Password Confirmation", autocomplete: "off" %>
  </div>

  <div class="actions">
    <%= f.submit "Create User", class: "btn btn-primary" %>
  </div>
  <% end %>
  <%= link_to "Back", :back %>
</div>
<% end %>