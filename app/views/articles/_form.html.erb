<div class="wrapper_skinny">
	<%= bootstrap_form_for(@article) do |f| %>

		<%= f.text_field :title, label: "Title", class: "form-control" %>

		<%= f.collection_select :author_id, Author.all, :id, :name, label: "Author", class: "form-control" %>

		<%= f.text_area :body, label: "Body", class: "text_area" %>

		<%= f.file_field :banner_image %>

		<%= f.submit "Submit", class: "btn btn-primary" %>

	<% end %>
</div>