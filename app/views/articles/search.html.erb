<div class="wrapper_skinny ">
	<h1 id="index-title">Search Results</h1>
	<div class="clearfix">
		<%= form_tag search_articles_path, method: :get, class: "searchbar", role: "search" do %>
			<p>
			  <%= text_field_tag :search, params[:search], class: "search-form" %>
			  <%= submit_tag "Search", name: nil, class: "btn btn-primary searchbar" %>
			</p>
		<% end %>
	</div>
	<div class="article-block">
	<% @articles.each do |article| %>
		<%= link_to image_tag(article.banner_image, class: "thumbnail_image"), article %>
		<%= link_to article.title, article %>
	<% end %>
	</div>
	<%= paginate @articles %>
</div>