<div class="wrapper_skinny">
	<%= bootstrap_form_for(@category) do |f| %>

		<%= f.text_field :name, label: "Name", class: "form-control", required: :true %>
		<%= f.text_area :description, label: "Description", class: "form-control", required: :true %>
		<%= f.file_field :banner_image, required: :true %>

		<%= f.submit "Submit", class: "btn btn-primary" %>

	<% end %>
</div>