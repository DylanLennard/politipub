<div class="wrapper_skinny">
	<%= bootstrap_form_for(@author) do |f| %>

		<%= f.text_field :name, label: "Name", class: "form-control" %>
		<%= f.text_field :email_link, label: "Email", class: "form-control" %>
		<%= f.text_field :twitter_link, label: "Twitter", class: "form-control" %>
		<%= f.text_field :google_plus_link, label: "Google Plus", class: "form-control" %>
		<%= f.text_field :facebook_link, label: "Facebook", class: "form-control" %>
		<%= f.text_field :linkedin_link, label: "Linkedin", class: "form-control" %>
		<%= f.text_field :tumblr_link, label: "Tumblr", class: "form-control" %>
		<%= f.text_field :personal_link, label: "Personal website/blog", class: "form-control" %>
		<%= f.text_field :political_views, label: "Political Views", class: "form-control" %>
		<%= f.text_area :bio, label: "About Me", class: "form-control aboutme_text" %>
		<%= f.file_field :profile_image %>

		<% if current_admin.superadmin? %>
			<%= f.check_box :validated, label: "Validate" %>
		<% end %>

		<%= f.submit "Submit", class: "btn btn-primary" %>

	<% end %>
</div>