<div class="wrapper_super_skinny signup-block">
<% if admin_signed_in? %>
  <h2 class="form_title">Sign up</h2>

  <%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="field">
      <%= f.email_field :email, label: "Email", autofocus: true %>
    </div>

    <div class="field">
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, label: "Password", autocomplete: "off" %>
    </div>

    <div class="field">
      <%= f.password_field :password_confirmation, label: "Password Confirmation", autocomplete: "off" %>
    </div>

    <div class="actions">
      <%= f.submit "Sign up", class: "btn btn-primary" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
  <% else %>
    <h1 class="form_title">Sign Up</h2>
    <p>Please contact our team at politipub@gmail.com if you're interested in becoming a contributor to our site!</p>
    <%= image_tag('duff.jpg', class: "duff-image") %>
  <%end %>
</div>