<div class="wrapper_super_skinny login_form">
	<h2 class="form_title">Resend unlock instructions</h2>

	<%= boostrap_form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post }) do |f| %>
	  <%= devise_error_messages! %>

	  <div class="field">
	    <%= f.email_field :email, label: "Email", autofocus: true %>
	  </div>

	  <div class="actions">
	    <%= f.submit "Resend unlock instructions" %>
	  </div>
	<% end %>

	<%= render "devise/shared/links" %>
</div>