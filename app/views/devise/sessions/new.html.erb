<div class="banner">
</div>

<div class="wrapper_super_skinny login_form">
<h2 class="form_title">Log in</h2>
  <%= bootstrap_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.email_field :email, label: "Email", autofocus: true, class: "form-control" %>
    </div>

    <div class="field">
      <%= f.password_field :password, label: "Password", autocomplete: "off", class: "form-control" %>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="field">
        <%= f.check_box :remember_me, label: "Remember Me" %>
      </div>
    <% end -%>

    <div class="actions">
      <%= f.submit "Log in", class: "btn btn-primary"  %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>