<div class="dashboard_banner">
	<div class="wrapper">
		<h1>Admin Dashboard</h1>
	</div>
</div>

<div class="wrapper">
	<div class="clearfix">
		<%= link_to "Create A New Admin Account", new_admin_path, class: "admin_account" %>
		<% if current_admin.superadmin? %>
		<%= link_to "Create A New OnTap Article", new_ontap_path, class: "admin_account" %>
		<%= link_to "Create A New Category", new_category_path, class: "admin_account" %>
		<% end %>
		<%= link_to "Account Settings", edit_admin_registration_path, class: "account_settings" %>
	</div>
	<div class="row clearfix">
		<div class="col-50 dashboard_body">
			<h1>Articles</h1>
			<h4><%= link_to "Create a new article", new_article_path %></h4>
			<% @articles.each do |article| %>
				<div class="row clearfix dashboard_row">
					<div class="dashboard_column">
						<p class="dashboard_title"><%= article.title %><p>
						<p><%= link_to "Show", article %></p>
						<% if current_admin.id == article.admin_id && (article.published? == false) || current_admin.superadmin? %>
							<p><%= link_to "Edit", edit_article_path(article) %></p>
							<p><%= link_to "Delete", article, method: :delete, data: {confirm: "Are you sure you want to delete this article?"} %></p>
						<% end %>
					</div>
				</div>
			<% end %>
			<p><%= link_to "See all articles", pages_articles_dashboard_path %></p>
		</div>
		<div class="col-50 dashboard_body">
			<h1>Authors</h1>
			<h4><%= link_to "Create new/edit profile", new_author_path %></h4>
			<% @authors.each do |author| %>
				<div class="row clearfix dashboard_row">
					<div class="dashboard_column">
						<p class="dashboard_title"><%= author.name %><p>
						<p><%= link_to "Show", author %></p>
						<% if current_admin.id == author.admin_id || current_admin.superadmin? %>
							<p><%= link_to "Edit", edit_author_path(author) %></p>
							<p><%= link_to "Delete", author, method: :delete, data: {confirm: "Are you sure you want to delete this author?"} %></p>
						<% end %>
					</div>
				</div>
			<% end %>
		</div>
	</div>
</div>