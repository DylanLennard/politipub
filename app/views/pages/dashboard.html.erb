<div class="dashboard_banner">
	<div class="wrapper">
		<h1>Admin Dashboard</h1>
	</div>
</div>
<div class="dashboard-body wrapper" id="admin-dashboard">
	<div class="clearfix">
		<%= link_to "Create A New Admin Account", new_admin_path, class: "account" %>
		<%= link_to "Account Settings", edit_admin_registration_path, class: "account" %>
	</div>
	<ul class="admin-tab-bar">
		<li onclick="adminTabs('admin-articles');">
			<p>Articles</p>
		</li>
		<li onclick="adminTabs('admin-authors');">
			<p>Authors</p>
		</li>
		<li onclick="adminTabs('admin-categories');">
			<p>Categories</p>
		</li>
		<li onclick="adminTabs('admin-ontaps');">
			<p>OnTap Articles</p>
		</li>
	</ul>
	<div id="admin-articles" class="admin-tab">
		<h1>Articles</h1>
		<h4><%= link_to "Add a new article", new_article_path %></h4>
		<%= render 'pages/admin/articles' %>
		<p><%= link_to "See all articles", pages_articles_dashboard_path %></p>
	</div>
	<div id="admin-authors" class="admin-tab">
		<h1>Authors</h1>
		<h4><%= link_to "Add/edit your author profile", new_author_path %></h4>
		<%= render 'pages/admin/authors' %>
	</div>
	<div id="admin-categories" class="admin-tab">
		<h1>Categories</h1>
		<% if current_admin.superadmin? %>
			<h4><%= link_to "Add a new category", new_category_path %></h4>
		<%= render 'pages/admin/categories' %>
		<% else %>
			<p>For authorized administrators only</p>
		<% end %>
	</div>
	<div id="admin-ontaps" class="admin-tab">
		<h1>On Tap</h1>
		<% if current_admin.superadmin? %>
			<h4><%= link_to "Add a new On Tap article", new_ontap_path %></h4>
			<%= render 'pages/admin/ontaps' %>
		<% end %>
	</div>
</div>

<script>
	adminTabs('admin-articles');
</script>
<% @title = "Admin Dashboard" %>