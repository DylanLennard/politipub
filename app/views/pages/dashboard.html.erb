<div class="dashboard_banner">
	<h1>Admin Dashboard</h1>
</div>

<div class="wrapper">
	<div class="row clearfix">
		<div class="col-50 dashboard_body">
			<h1>Articles</h1>
			<h4><%= link_to "Create a new article", new_article_path %></h4>
			<% @articles.each do |article| %>
				<div class="row clearfix dashboard_row">
					<div class="dashboard_column">
						<p class="dashboard_title"><%= article.title %><p>
						<p><%= link_to "Show", article %></p>
						<% if current_admin.id == article.admin_id || current_admin.superadmin? %>
							<p><%= link_to "Edit", edit_article_path(article) %></p>
							<p><%= link_to "Delete", article, method: :delete, data: {confirm: "Are you sure you want to delete this author?"} %></p>
						<% end %>
					</div>
				</div>
			<% end %>
		</div>
		<div class="col-50 dashboard_body">
			<h1>Authors</h1>
			<h4><%= link_to "Create new/edit profile", new_author_path %></h4>
			<% @authors.each do |author| %>
				<div class="row clearfix dashboard_row">
					<div class="dashboard_column">
						<p class="dashboard_title"><%= author.name %><p>
						<p><%= link_to "Show", author %></p>
						<% if current_admin.id == author.admin_id || current_admin.superadmin? %>
							<p><%= link_to "Edit", edit_author_path(author) %></p>
							<p><%= link_to "Delete", author, method: :delete, data: {confirm: "Are you sure you want to delete this author?"} %></p>
						<% end %>
					</div>
				</div>
			<% end %>
		</div>
	</div>
</div>