<div class="wrapper_super_skinny signup-block">
  <h1 class="form_title">Sign Up</h1>

  <%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="field">
      <%= f.text_field :first_name, label: "First Name", autofocus: true %>
    </div>

    <div class="field">
      <%= f.text_field :last_name, label: "Last Name", autofocus: true %>
    </div>

    <div class="field">
      <%= f.email_field :email, label: "Email", autofocus: true %>
    </div>

    <div class="field">
      <%= f.text_field :article_name, label: "Name of your article", autofocus: true %>
    </div>

    <div class="field">
      <%= f.text_field :article_document, label: "Upload a sample of your article", autofocus: true %>
    </div>

    <div class="field">
      <%= f.text_field :article_category, label: "What category best describes your article", autofocus: true %>
    </div>

    <div class="field">
      <%= f.text_field :article_name, label: "Please provide a link to your social media account or website", autofocus: true %>
    </div>

    <div class="field">
      <%= f.text_area :article_name, label: "Why are you submitting to PolitiPub", autofocus: true %>
    </div>

    <div class="actions">
      <%= f.submit "Sign up", class: "btn btn-primary" %>
    </div>
</div>