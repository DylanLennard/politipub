<table class="media-table">
	<thead>
		<tr>
			<th>ID</th>
			<th>Name</th>
			<th>Member Since</th>
			<th>Edit</th>
			<th>Delete</th>
		</tr>
	</thead>
	<tbody>
		<% @authors.each do |author| %>
			<tr>
				<td><%= author.id %></td>
				<td><%= author.name %></td>
				<td><%= time_ago_in_words(author.created_at) %> ago</td>
				<% if current_admin.id == author.admin_id || current_admin.superadmin? %>
					<td><%= link_to image_tag("edit.png"), edit_author_path(author) %></td>
					<td><%= link_to image_tag("delete.png"), author_path(author), method: :delete, data: { confirm: "Are you sure?" } %> </td>
				<% end %>
			</tr>
		<% end %>
	</tbody>
</table>